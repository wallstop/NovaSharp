<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <DefineConstants>$(DefineConstants);DOTNET_CORE</DefineConstants>
        <AssemblyName>DotNetCoreTestRunner</AssemblyName>
        <OutputType>Exe</OutputType>
        <PackageId>DotNetCoreTestRunner</PackageId>
        <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
        <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
        <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
        <LangVersion>9</LangVersion>
        <StartupObject>DotNetCoreTestRunner.Program</StartupObject>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\..\runtime\NovaSharp.Interpreter\NovaSharp.Interpreter.csproj" />
        <ProjectReference Include="..\..\..\debuggers\NovaSharp.VsCodeDebugger\NovaSharp.VsCodeDebugger.csproj" />
        <ProjectReference Include="..\..\..\tooling\NovaSharp.Cli\NovaSharp.Cli.csproj" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="moonsharp_tests.log" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.0" />
        <PackageReference Include="NUnit" Version="4.4.0" />
        <PackageReference Include="NUnit3TestAdapter" Version="5.2.0" />
    </ItemGroup>
    <ItemGroup>
        <None Update="TestMore\**\*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
</Project>
